@model IEnumerable<Cinema.Models.Rezyserowie>

@{
    ViewData["Title"] = "Lista Reżyserów";
}

<h1>Pełna lista Reżyserów</h1>

<p>
    <a class="btn btn-block" asp-action="Create"><i class="bi bi-person-plus-fill"></i> Dodaj Reżysera</a>
</p>
<table class="table">
    <thead>
        <tr class="text-center">
            <th>
                @Html.DisplayNameFor(model => model.RezyserZdjecieURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RezyserImieNazwisko)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RezyserBiografia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img class="rounded-circle" src="@item.RezyserZdjecieURL" alt="@item.RezyserImieNazwisko" style="max-width: 150px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RezyserImieNazwisko)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RezyserBiografia)
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.RezyserId"><i class="bi bi-pencil-square"></i> Edytuj</a> |
                <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.RezyserId"><i class="bi bi-eye"></i> Detale</a> |
                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.RezyserId"><i class="bi bi-trash"></i> Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
