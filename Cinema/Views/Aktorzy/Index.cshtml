@model IEnumerable<Cinema.Models.Aktorzy>

@{
    ViewData["Title"] = "Lista aktorów";
}

<h1>Pełna lista aktorów</h1>

<div>
    <a class="btn btn-success text-white" asp-action="Create"><i class="bi bi-person-plus-fill"></i> Dodaj aktora</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AktorZdjecieURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AktorImieNazwisko)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AktorBiografia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="align-middle">             
                <img class="rounded-circle" src="@item.AktorZdjecieURL" alt="@item.AktorImieNazwisko" style="max-width: 150px" />
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.AktorImieNazwisko)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.AktorBiografia)
            </td>
            <td class="align-middle">
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.AktorId"><i class="bi bi-pencil-square"></i> Edytuj</a> |
                <a class="btn btn-outline-secondary"asp-action="Details" asp-route-id="@item.AktorId"><i class="bi bi-eye"></i> Detale</a> |
                <a class="btn btn-danger text-white"asp-action="Delete" asp-route-id="@item.AktorId"><i class="bi bi-trash"></i> Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
