@model Cinema.Models.Aktorzy

@{
    ViewData["Title"] = "Dodaj aktora";
}

<h1>Dodaj aktora</h1>

<h4>Aktor</h4>
<hr />
<div class="row">
    <div class="col-md-4 offset-2">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group text-center">
                <img id="Picture" />
            </div>

            <div class="form-group">
                <label asp-for="AktorZdjecieURL" class="control-label"></label>
                <input asp-for="AktorZdjecieURL" class="form-control" />
                <span asp-validation-for="AktorZdjecieURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AktorImieNazwisko" class="control-label"></label>
                <input asp-for="AktorImieNazwisko" class="form-control" />
                <span asp-validation-for="AktorImieNazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AktorBiografia" class="control-label"></label>
                <input asp-for="AktorBiografia" class="form-control" />
                <span asp-validation-for="AktorBiografia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-outline-secondary" asp-action="Index">Powrót do listy</a>
                <input type="submit" value="Dodaj" class="btn btn-primary  float-right" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
