@model Cinema.Models.Filmy

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Filmy</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FilmId" />
            <div class="form-group">
                <label asp-for="FilmNazwa" class="control-label"></label>
                <input asp-for="FilmNazwa" class="form-control" />
                <span asp-validation-for="FilmNazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FilmOpis" class="control-label"></label>
                <input asp-for="FilmOpis" class="form-control" />
                <span asp-validation-for="FilmOpis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FilmCena" class="control-label"></label>
                <input asp-for="FilmCena" class="form-control" />
                <span asp-validation-for="FilmCena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FilmZdjecieURL" class="control-label"></label>
                <input asp-for="FilmZdjecieURL" class="form-control" />
                <span asp-validation-for="FilmZdjecieURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FilmDataStartu" class="control-label"></label>
                <input asp-for="FilmDataStartu" class="form-control" />
                <span asp-validation-for="FilmDataStartu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FilmDataKonca" class="control-label"></label>
                <input asp-for="FilmDataKonca" class="form-control" />
                <span asp-validation-for="FilmDataKonca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FilmKategoria" class="control-label"></label>
                <select asp-for="FilmKategoria" class="form-control">
                    <option value="1">Sciencefiction</option>
                    <option value="2">Horror</option>
                    <option value="3">Dramat</option>
                    <option value="4">Przygodowy</option>
                    <option value="5">Dokumentalny</option>
                    <option value="6">Romantyczny</option>
                    <option value="7">Fantastyczny</option>
                    <option value="8">Komedia</option>
                    <option value="9">Akcji</option>
                    <option value="10">Historyczny</option>
                    <option value="11">Thriller</option>
                    <option value="12">Komiksowy</option>
                </select>
                <span asp-validation-for="FilmKategoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RezyserId" class="control-label"></label>
                <input asp-for="RezyserId" class="form-control" />
                <span asp-validation-for="RezyserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
